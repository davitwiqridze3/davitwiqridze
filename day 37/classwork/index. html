    <style>
        div {
            width: 100px;
            height: 100px;
            background-color: lightblue;
            margin: 100px;
            transition: transform 0.3s ease;
        }

        
        div:hover {
            transform: translate(50px, -50px) scale(2);
        }

        
        div:active {
            transform: translate(-50px, 50px) scale(0.5);
        }
    </style>
